      <form action="/addStream" method="POST" autocomplete="off"> 

        <div class="mb-3">
          <% for(i in homeDirectory){ %>
            <% var temp = homeDirectory.directory %>
          <label class="form-label">Select Directory:</label>
          <select class="form-select" name="type" id="selectValue" onchange="singleSelectChangeValue()">
            <% for( var j = 0; j < temp.length; j++) { %>
              <option value="<%= temp[j].id %>"><%= temp[j].name %></option>
              <% } %>  
              <% break %>
          </select>
          <% } %>
          
        </div>  

        

         <script>

         function singleSelectChangeValue(){ 
           var selValue = document.getElementById("selectValue").value;
             console.log(selValue) 
           document.getElementById("directoryId").value = selValue;
           } 

          
         </script>
         



        <div class="mb-3">
          <label class="form-label">Selected Directory</label>
          <input type="text" class="form-control" name="directory_id" id="directoryId" placeholder="Directory ID" >
      
        </div>
        


        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="name">
            
        </div>
        <div class="mb-3">
            <label class="form-label">Var Name</label>
            <input type="text" class="form-control" name="inputDataVar[][var_name]" value="dummyVariableName" readonly="readonly">
            
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" name="inputDataVar[][display_name]" value="dummyDisplayName" readonly="readonly">
            
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" name="inputDataVar[][description]" value="dummyDescription" readonly="readonly">
            
        </div>
        <div class="mb-3">
            <label class="form-label">Units</label>
            <input type="text" class="form-control" name="inputDataVar[][units]" value="dummyUnits" readonly="readonly">
            
        </div>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <input type="text" class="form-control" name="inputDataVar[][type]" value="dummyType" readonly="readonly">
            
        </div>
    
