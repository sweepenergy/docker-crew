<%- include("partials/header"); %>

<form action="/addDevice" method="POST">
    <div class="mb-3">
      <label class="form-label">Stream ID</label>
      <input type="text" class="form-control" name="stream_id">
      
    </div>
    <div class="mb-3">
        <label class="form-label">Device Name</label>
        <input type="text" class="form-control" name="device_name">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Device ID</label>
        <input type="number" class="form-control" name="device_id" step="1">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Host IP Address</label>
        <input type="text" class="form-control" name="host_ip">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Host Port</label>
        <input type="number" class="form-control" name="port" step="1" min= "1025" max = "65,535">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Var Name</label>
        <input type="text" class="form-control" name="var_name">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Display Name</label>
        <input type="text" class="form-control" name="display_name">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="description">
        
    </div>
    <div class="mb-3">
        <label class="form-label">Units</label>
        <input type="text" class="form-control" name="units">
        
    </div>
    <label for="type">Type:</label>
    <select name="type">
        <option value="int">int</option>
        <option value="floatBE">float (big-endian)</option>
        <option value="floatLE">float (little-endian)</option>
        <option value="doubleBE">double (big-endian)</option>
        <option value="doubleLE">double (little-endian)</option>
    </select>
    <div class="mb-3">
        <label class="form-label">Register</label>
        <input type="number" class="form-control" name="register" step="1">
        
    </div>

    <!-- <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Top Directory</label>
      <input type="text" class="form-control" name="TopDir">
    </div> -->
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>


<%- include("partials/footer"); %>